<% if session[:admin_authorized] %>
<%= form_for @organization, url: organization_path, method: :delete, html: { class: 'pull-right' } do |f| %>
  <div class="form-group">
    <%= f.submit "Delete #{@organization[:name]}", class: 'btn btn-danger' %>
  </div>
<% end %>
<% end %>

<div class="page-header">
  <h1>
    <%= link_to organization_path(params[:slug], org_path:params[:org_path]) do %><small><%= @organization.name %></small><% end %>
    <br>
    <%=t '.title', :default => "Update Organization" %>
  </h1>
</div>

<% if @organization.lms_authentication_key != '' %>
    <div class="pull-right">

      <a class="btn btn-info" href="http://<%=@organization.slug + canvas_accounts_path %>">
        <span class="glyphicon glyphicon-refresh"></span>
        LMS Accounts
      </a>

      <a class="btn btn-info" href="http://<%=@organization.slug + canvas_courses_path %>">
        <span class="glyphicon glyphicon-refresh"></span>
        LMS Courses
      </a>
    </div>
<% end %>

<%= render 'edit' %>
