<script>
var calendar;

var globalEventsCalendarURL = 'https://www.google.com/calendar/feeds/usuconnections%40gmail.com/public/basic';

var globalEventsCalendarSettings = {
  url: globalEventsCalendarURL,
  className: 'global-events',
  editable: false
};

if(typeof(documentEvents) == 'undefined') {
  documentEvents = [];
}

(function($){
  $(function(){
  	
    
    if(!$('#controlPanel').length) {
      $('body').on('click', '.fc-event', function() {
        return false;
      });

      calendar = $("#calendar").fullCalendar({
        header: {
          left: 'title',
          center: '',
          right: '',
        },
        height: 1300,
        events: documentEvents,
        eventSources: globalEventsCalendarSettings,
        defaultDate: '2014-08-20',
        defaultView: 'agendaWeek',
        minTime: '09:00:00',
        maxTime: '23:30:00',
        slotDuration: '00:15:00',
        allDaySlot: false,
        defaultTimedEventDuration: '00:30:00',
        hiddenDays: [0,1,2],
        editable: false,
        eventRender: function(calEvent, element) {
          var roomElement = $('<div/>').addClass('event-room').text(calEvent.room);

          element.removeAttr('href')
          $('.fc-time', element).append(roomElement);
        }
      });
      
      
    }
  });
}(jQuery));

</script>